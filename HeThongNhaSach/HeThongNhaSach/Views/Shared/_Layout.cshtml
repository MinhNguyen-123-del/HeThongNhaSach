<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Nhà Sách Trực Tuyến</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <style>
        /* Không hiện màu/hiệu ứng khi focus */
        .form-control:focus {
            outline: none !important;
            border-color: #ced4da !important;
            box-shadow: none !important;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header>
        <div class="bg-dark text-white text-center py-1">
            <span class="me-3">Miễn phí vận chuyển đơn từ 250.000đ</span>
            <span>Hỗ trợ: 1900 636 467</span>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="fs-3 me-2">📚</div>
                    <span class="fw-bold text-primary">NHÀ SÁCH</span>
                </a>

                <!-- Form tìm kiếm -->
                <form class="mx-auto w-75 position-relative search-form" onsubmit="return false;">
                    <div class="input-group">
                        <input id="searchBox" type="text"
                               class="form-control rounded-start-pill"
                               placeholder="Mua Đồ..." autocomplete="off">
                        <button class="btn btn-danger rounded-end-pill" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                    <ul id="suggestions" class="list-group position-absolute w-100"
                        style="top:100%; z-index:1000;"></ul>
                </form>

                <!-- Menu -->
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="DanhMuc" asp-action="DanhMuc">Danh mục</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Home" asp-action="GioHang">
                                🛒 Giỏ hàng
                                <span id="cartCount"
                                      class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="ThongBao" asp-action="Index">
                                🔔 Thông báo
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark">
                                    4
                                </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TaiKhoan" asp-action="DangNhap">Tài khoản</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Nội dung riêng -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script giỏ hàng -->
    <script>
        function updateCartCount() {
            let cart = JSON.parse(localStorage.getItem("cart")) || [];
            let totalQty = cart.reduce((sum, p) => sum + p.qty, 0);
            let badge = document.getElementById("cartCount");
            if (badge) {
                if (totalQty > 0) {
                    badge.innerText = totalQty;
                    badge.style.display = "inline-block";
                } else {
                    badge.innerText = 0;
                    badge.style.display = "none";
                }
            }
        }
        updateCartCount();
    </script>

    <!-- Script tìm kiếm -->
    <script src="~/js/search.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
